</head>
    <style>
        *{
            font-family: 'Kanit';
        }
    </style>
<body>
    
    <%- include('layout/menu'); %>
    <br><br>
    <div class="container">
        <div class="card">
            <div class="card-header">
                LISTA DE ALUMNOS ASISTIDOS
            </div>
            <div class="card-body">
                <a class="btn btn-success" href="/asistencia/form/0">Registrar</a> 
                <br><br>
                <table class="table table-bordered table-hover">
                    <thead>
                        <th>Nr. de llegada</th>
                        <th>Nombres</th>
                        <th>Apellidos</th>
                        <th>Grado Y Secci√≥n</th>
                        <th>Dni</th>
                        <th>Turno</th>
                        <th></th>
                        
                        
                    </thead>
                    <tbody>
                        <% if(dataAsistencia.length) { %>
                            <% dataAsistencia.forEach( item => { %>
                                    <tr>
                                        <td><%= item.ordenLlegada %></td>
                                        <td><%= item.nombreAlumno %></td>
                                        <td><%= item.apellidoAlumno %></td>
                                        <td><%= item.gradoAlumno %></td>
                                        <td><%= item.dniAlumno %></td>
                                        <td><%= item.turnoAlumno %></td>
                                        <td>
                                            <a class="btn btn-warning" href="/asistencia/form/<%= item.ordenLlegada %>">Editar</a>
                                        </td>
                                        
                                    </tr>
                                <% }) %>
                        <% } %>
                    </tbody>
                </table>

            </div>
        </div>
    
    </div>

</body>

</html>